@model CiRent.BL.Entities.ProductModel
<div class="product-page">
    <div class="product-info">
        <h4 class="product-name">@Model.NameOfItem</h4>
        <div class="product-container">
            <div class="product-left">
                <img class="product-img" src="~/Images/Products/@Model.PhotoPath" alt="">
            </div>
            <div class="product-right">
                <form class="add-to-cart-form">
                    <h3 class="add-to-cart-label">
                        Select rent period</h3>
                        <span class="rent-label">Rent beginning:</span>
                        <input class="rent-date" type="date" name="">
                        <span class="rent-label">Rent ending:</span>
                        <input class="rent-date" type="date" name="">
                        <input type="submit" value="Add to cart" name="">
                </form>
                <p class="product-description">@Model.Description</p>
            </div>
        </div>
    </div>
  
</div>